<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Stonks Login</title>
  <link rel="stylesheet" href="https://threads.plaid.com/threads.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <main class="main">
    <div class="grid">
      <div class="grid-column">
        <div id="banner" class="everpresent-content">
          <h1 class="everpresent-content__heading">Stonks!</h1>
          <p id="intro" class="everpresent-content__subheading">
            View consolidated portfolio for your own investments and compare it with your peers.
          </p>
          <p id="steps" class="everpresent-content__subheading">
            Success! You just linked your account. Go back to Slack and run /stonks-folio.
          </p>
        </div>

        <div id="container" class="initial-view">
          <p class="initial-view__description">
            Click the button below to open a list of Institutions. After you select one, youâ€™ll be guided through an
            authentication process.
          </p>

          <button id="link-btn" class="button button--is-primary" disabled>Connect</button>
          <div class="loading-indicator"></div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
  <script src="https://cdn.plaid.com/link/v2/stable/link-initialize.js"></script>
  <script>
    (function ($) {
      var products = '<%= PLAID_PRODUCTS %>'.split(',');
      var linkHandlerCommonOptions = {
        apiVersion: 'v2',
        clientName: 'Stonks',
        env: '<%= PLAID_ENV %>',
        product: products,
        key: '<%= PLAID_PUBLIC_KEY %>',
        countryCodes: '<%= PLAID_COUNTRY_CODES %>'.split(','),
      };

      var userId = qs('userId');
      var userName = qs('userName');
      var handler = Plaid.create({
        ...linkHandlerCommonOptions,
        webhook: 'https://us-central1-intray-70a9d.cloudfunctions.net/api/plaid-webhook',
        onSuccess: function (public_token) {
          $.post('/api/get-access-token', {
            public_token: public_token,
            userName,
            userId
          }, function (data) {
            $('#container').fadeOut('fast', function () {
              $('#intro').hide();
              $('#steps').fadeIn('slow');
            });
          });
        },
      });
      $('#link-btn').attr('disabled', false);
      $('.loading-indicator').hide();

      var accessToken = qs('access_token');
      if (accessToken != null && accessToken != '') {
        $.post('/set_access_token', {
          access_token: accessToken
        }, function (data) {
          $('#container').fadeOut('fast', function () {
            $('#item_id').text(data.item_id);
            $('#access_token').text(accessToken);
            $('#intro').hide();
            $('#app, #steps').fadeIn('slow');
          });
        });
      }

      $('#link-btn').on('click', function (e) {
        handler.open();
      });
    })(jQuery);

    function qs(key) {
      key = key.replace(/[*+?^$.\[\]{}()|\\\/]/g, "\\$&"); // escape RegEx meta chars
      var match = location.search.match(new RegExp("[?&]" + key + "=([^&]+)(&|$)"));
      return match && decodeURIComponent(match[1].replace(/\+/g, " "));
    }

    function displayError(element, error) {
      var html = `
    <div class="alert alert-danger">
      <p><strong>Error Code:</strong> ${error.error_code}</p>
      <p><strong>Error Type:</strong> ${error.error_type}</p>
      <p><strong>Error Message:</strong> ${error.display_message == null ? error.error_message : error.display_message}</p>
      <div>Check out our <a href="https://plaid.com/docs/#errors-overview">errors documentation</a> for more information.</div>
    </div>`;
      $(element).html(html).slideDown();
    }
  </script>
  <style>
    /*

Base

*/

    body {
      background: #ffffff;
    }

    .main {
      max-width: 960px;
      margin-right: auto;
      margin-left: auto;
      padding: 80px 40px;
    }


    /*

Content at the top of the view

*/

    .loading-indicator {
      -webkit-animation: rot 1200ms infinite cubic-bezier(0.23, 1.2, 0.32, 1);
      animation: rot 1200ms infinite cubic-bezier(0.23, 1.2, 0.32, 1);
      border-bottom: 2px solid #e3e3e3;
      border-left: 2px solid #e3e3e3;
      border-radius: 100%;
      border-right: 2px solid #e3e3e3;
      border-top: 2px solid #7e7e7e;
      font-size: 100%;
      font: inherit;
      height: 45px;
      left: calc(50% - (45px / 2));
      margin: 0;
      padding: 0;
      position: absolute;
      top: 80%;
      vertical-align: baseline;
      width: 45px;
      box-sizing: border-box
    }

    @keyframes rot {
      from {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
      }

      to {
        -webkit-transform: rotate(359deg);
        transform: rotate(359deg);
      }
    }

    @-webkit-keyframes rot {
      from {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
      }

      to {
        -webkit-transform: rotate(359deg);
        transform: rotate(359deg);
      }
    }

    .everpresent-content {
      border-bottom-width: 1px;
      border-bottom-color: #E3E9EF;
      border-bottom-style: solid;
      margin-bottom: 16px;
      padding-bottom: 16px;
    }

    .everpresent-content__heading {
      margin-bottom: 16px;
    }

    .everpresent-content__subheading {
      font-size: 24px;
      font-weight: 300;
      color: #527084;
      line-height: 32px;
      margin-bottom: 0;
    }

    /*

Item overview

*/

    .item-overview {
      padding-bottom: 16px;
    }

    .item-overview__column {
      width: 50%;
      float: left;
    }

    .item-overview__column:nth-child(1) {
      padding-right: 8px;
    }

    .item-overview__column:nth-child(2) {
      padding-left: 8px;
    }

    .item-overview__heading {
      font-weight: bold;
      text-transform: uppercase;
      font-size: 12px;
      margin-bottom: 0;
    }

    .item-overview__id {
      text-overflow: ellipsis;
      overflow-x: hidden;
    }

    /*

One off tweaks to the layout for tables

*/

    .response-row {}

    .response-row--is-identity td {
      width: 25%;
      overflow-wrap: break-word;
      vertical-align: top;
    }

    /*

Display content inside of box

*/

    .box {
      border-radius: 4px;
      border-width: 1px;
      border-color: #E3E9EF;
      border-style: solid;
      border-radius: 4px;
      margin-bottom: 24px;
      overflow: hidden;
      box-shadow: 0 1px 2px rgba(3, 49, 86, 0.2);
    }

    .box__heading {
      padding: 16px 24px;
      border-bottom-width: 1px;
      border-bottom-color: #E3E9EF;
      border-bottom-style: solid;
      background-color: #FAFCFD;
      margin-bottom: 0;
    }


    /*

Item row

*/
    .item-data-row {
      border-bottom-width: 1px;
      border-bottom-color: #E3E9EF;
      border-bottom-style: solid;
      padding-top: 24px;
      padding-bottom: 24px;
      padding-left: 24px;
      padding-right: 24px;
    }

    .item-data-row:after {
      clear: both;
      content: '';
      display: table;
    }

    .item-data-row:last-child {
      margin-bottom: 0;
      border-bottom: 0;
    }

    .item-data-row__request-type {
      /* background-color  */
      font-size: 12px;
      color: #02B1F8;
      letter-spacing: 0;
      background: #D9F3FE;
      font-weight: 600;
      text-transform: uppercase;
      border-radius: 4px;
      height: 32px;
      line-height: 32px;
      text-align: center;
      font-size: 14px;
    }

    .item-data-row__endpoint {
      font-family: "monaco", courier;
      font-size: 14px;
      line-height: 32px;
      display: inline-block;
    }

    .item-data-row__nicename {
      font-size: 16px;
      line-height: 32px;
      display: inline-block;
      font-weight: 500;
      color: #033156;
    }


    .item-data-row__left {
      width: 13%;
      float: left;
    }

    .item-data-row__center {
      width: 62%;
      float: left;
      padding-left: 16px;
    }

    .item-data-row__right {
      width: 25%;
      float: left;
    }

    /*

Hide things

*/

    #app {
      display: none;
    }

    #steps {
      display: none;
    }

    /*

Errors

*/

    .alert {
      padding: 15px;
      margin-top: 20px;
      margin-bottom: 20px;
      border: 1px solid transparent;
      border-radius: 4px;
    }

    .alert-danger {
      color: #a94442;
      background-color: #f2dede;
      border-color: #ebccd1;
    }

    .alert-danger a {
      color: #a94442;
      font-weight: bold;
    }
  </style>
</body>

</html>